@model CarBook.Models.Order

@{
    ViewData["Title"] = "Create";
    ViewBag.active = 4;
    var img = Url.Content("~/assets/images/bg_3.jpg");
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('@img');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Booking <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Booking</h1>
            </div>
        </div>
    </div>
</section>

@*<form asp-action="Create">*@
<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12	featured-top">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex align-items-center" style="width:100%">
                        <form asp-action="Create" class="request-form ftco-animate bg-primary">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <h2>Make your trip</h2>
                            <div class="form-group">
                                <label for="" class="label">Pick-up location</label>
                                <input asp-for="PickUpLocation" class="form-control" placeholder="City, Airport, Station, etc" />
                                <span asp-validation-for="PickUpLocation" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Drop-off location</label>
                                <input asp-for="DropUpLocation" class="form-control" placeholder="City, Airport, Station, etc" />
                                <span asp-validation-for="DropUpLocation" class="text-danger"></span>
                            </div>
                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Pick-up date</label>
                                    <input asp-for="PickUpDate" class="form-control" type="date" />
                                    <span asp-validation-for="PickUpDate" class="text-danger"></span>
                                </div>
                                <div class="form-group ml-2">
                                    <label for="" class="label">Drop-off date</label>
                                    <input asp-for="DropUpDate" class="form-control" type="date" />
                                    <span asp-validation-for="DropUpDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Pick-up time</label>
                                <input asp-for="Time" class="form-control" id="time_pick" placeholder="Time" />
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                            <div class="form-group" hidden>
                                <label asp-for="CarID" class="control-label"></label>
                                <input asp-for="CarID" class="form-control" value="@ViewBag.Car.Id"></input>
                            </div>
                            <div class="form-group" hidden>
                                <label asp-for="UserId" class="control-label"></label>
                                <input asp-for="UserId" class="form-control" value="@ViewBag.UserId"></input>
                            </div>
                            <div class="form-group" hidden>
                                <label asp-for="Status" class="control-label"></label>
                                <input asp-for="Status" class="form-control" value="Booking" />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="label">Time Rate</label>
                                <input id="timeRate" type="text" class="form-control"  readonly />
                                <input id="timeRateValue" type="text" name="timerate" hidden/>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Rent A Car Now" class="btn btn-secondary py-3 px-4">
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="services-wrap rounded-right w-100">
                            <h3 class="heading-section mb-4">Better Way to Rent Your Perfect Cars</h3>
                            <div class="row d-flex mb-4">
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Choose Your Pickup Location</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Select the Best Deal</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Reserve Your Rental Car</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p><a class="btn btn-primary py-3 px-4">Reserve Your Perfect Car</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
@{
    if (ViewBag.Car != null)
    {
        <section class="ftco-section ftco-cart">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 ftco-animate">
                        <div class="car-list">
                            <table class="table">
                                <thead class="thead-primary">
                                    <tr class="text-center">
                                        <th>&nbsp;</th>
                                        <th>&nbsp;</th>
                                        <th class="bg-primary heading">Per Hour Rate</th>
                                        <th class="bg-dark heading">Per Day Rate</th>
                                        <th class="bg-black heading">Leasing</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="car-image"><div class="img" style="background-image:url('@ViewBag.Car.Image');"></div></td>
                                        <td class="product-name">
                                            <h3>@ViewBag.Car.Name</h3>
                                            <p class="mb-0 rated">
                                                <span>rated:</span>
                                                <span class="ion-ios-star"></span>
                                                <span class="ion-ios-star"></span>
                                                <span class="ion-ios-star"></span>
                                                <span class="ion-ios-star"></span>
                                                <span class="ion-ios-star"></span>
                                            </p>
                                        </td>

                                        <td class="price">
                                            <p class="btn-custom"><a onclick="TimeRate('Hour')">Rent a car</a></p>
                                            <div class="price-rate">
                                                <h3>
                                                    <span class="num"><small class="currency">$</small> @string.Format("{0:0.00}", ViewBag.Car.Price/12) </span>
                                                    <span class="per">/per hour</span>
                                                </h3>
                                                <span class="subheading">$3/hour fuel surcharges</span>
                                            </div>
                                        </td>

                                        <td class="price">
                                            <p class="btn-custom"><a onclick="TimeRate('Day')">Rent a car</a></p>
                                            <div class="price-rate">
                                                <h3>
                                                    <span class="num"><small class="currency">$</small> @string.Format("{0:0.00}", ViewBag.Car.Price)</span>
                                                    <span class="per">/per day</span>
                                                </h3>
                                                <span class="subheading">$3/hour fuel surcharges</span>
                                            </div>
                                        </td>

                                        <td class="price">
                                            <p class="btn-custom"><a onclick="TimeRate('Month')">Rent a car</a></p>
                                            <div class="price-rate">
                                                <h3>
                                                    <span class="num"><small class="currency">$</small> @string.Format("{0:0.00}", ViewBag.Car.Price*15)</span>
                                                    <span class="per">/per month</span>
                                                </h3>
                                                <span class="subheading">$3/hour fuel surcharges</span>
                                            </div>
                                        </td>
                                    </tr><!-- END TR-->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}

@*</form>*@

<script>
    function TimeRate(msg) {
        if (msg === "Day") {
            document.getElementById("timeRate").value = "Per Day Rate";
            document.getElementById("timeRateValue").value = @string.Format("{0:0.00}", ViewBag.Car.Price);
        }
        if (msg === "Hour") {
            document.getElementById("timeRate").value = "Per Hour Rate";
            document.getElementById("timeRateValue").value = @string.Format("{0:0.00}", ViewBag.Car.Price/12);
        }
        if (msg === "Month") {
            document.getElementById("timeRate").value = "Per Month Rate";
            document.getElementById("timeRateValue").value = @string.Format("{0:0.00}", ViewBag.Car.Price*15);
        }
    }
</script>

